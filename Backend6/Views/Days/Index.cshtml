@model IEnumerable<Rationality.Models.Day>

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Index" asp-controller="Days">
    <div class="wrapper">
        <section class="home-products">
            <div class="container">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="ran-block">
                                <h1>@item.Date.Day.@item.Date.Month</h1>
                                <button class="rand-day">
                                    <a asp-action="Index" asp-controller="Days">Поменять</a>
                                    <img src="~/img/random.png">
                                </button>
                            </div>
                            <div class="products-wrapper">
                                <div class="card bg-dark text-white">
                                    <div class="pr-img">
                                        <img src="@item.Breakfast.Picture" class="card-img" alt="breakfast">
                                    </div>
                                    <div class="card-img-overlay">
                                        <div class="block-txt-up">
                                            <h5 class="card-title">Завтрак</h5>
                                            <a asp-action="Details" asp-controller="Recipes" asp-route-id="@item.BreakfastId">Посмотреть</a>
                                        </div>
                                        <div class="block-txt-down">
                                            <a href="recipe.html" class="card-title">@item.Breakfast.Name</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card bg-dark text-white">
                                    <div class="pr-img">
                                        <img src="@item.Lunch.Picture" class="card-img" alt="breakfast">
                                    </div>
                                    <div class="card-img-overlay">
                                        <div class="block-txt-up">
                                            <h5 class="card-title">Обед</h5>
                                            <a asp-action="Details" asp-controller="Recipes" asp-route-id="@item.LunchId">Посмотреть</a>
                                        </div>
                                        <div class="block-txt-down">
                                            <a href="" class="card-title">@item.Lunch.Name</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card bg-dark text-white">
                                    <div class="pr-img">
                                        <img src="@item.Dinner.Picture" class="card-img" alt="breakfast">
                                    </div>
                                    <div class="card-img-overlay">
                                        <div class="block-txt-up">
                                            <h5 class="card-title">Ужин</h5>
                                            <a asp-action="Details" asp-controller="Recipes" asp-route-id="@item.DinnerId">Посмотреть</a>
                                        </div>
                                        <div class="block-txt-down">
                                            <a href="" class="card-title">@item.Dinner.Name</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <div class="block-txt">
                                        <h5>Перекус</h5>
                                    </div>
                                    @foreach (var snack in item.Snack.ProductSnacks)
                                    {
                                    <div class="row">
                                        <div class="sneck-wrapper">
                                            <div class="sneck card bg-dark text-white">
                                                <div class="pr-img">
                                                    @*<img src="@snack.Picture" class="card-img" alt="breakfast">*@
                                                </div>
                                                <div class="card-img-overlay">
                                                    @*<div class="block-txt-up">
                                                        <a asp-action="Details" asp-controller="ProductSnacks" asp-route-id="@item.Id">Посмотреть</a>
                                                    </div>*@
                                                    <div class="block-txt-down">
                                                        <a href="" class="card-title">@snack.Product.Name @snack.Amount@snack.Product.Unit</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </section>

    </div>
</form>


