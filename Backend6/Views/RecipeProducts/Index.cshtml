@model IEnumerable<Rationality.Models.RecipeProduct>

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewBag.Recipe.Name</h2>

<p>
    <a asp-action="Create" asp-route-recipeId="@ViewBag.Recipe.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { recipeId = item.RecipeId, productId = item.ProductId })
            </td>
        </tr>
}
    </tbody>
</table>
